streamgraph = () ->
    stack = d3.layout.stack()
        .offset('wiggle')
        .values( (d) ->
            d.values
        )
    layers = stack(stream_data())
    
    stream_x = d3.scale.linear()
        .domain([_min, _max])
        .range([margins['left'], width - margins['right']])
    x_axis = d3.svg.axis()
        .scale(stream_x)
        .orient('bottom')
        .tickFormat( (d) -> d.toString() )
    chart_group.append('g')
        .attr('class', 'axis')
        .attr('transform', "translate(0, #{height - margins['bottom']})")
        .call(x_axis)

    stream_y = d3.scale.linear()
        .domain([d3.max(layers, (d) ->
            max_so_far = 0
            for value in d.values
                possible = value.y0 + value.y
                max_so_far = possible if possible > max_so_far
            max_so_far
        ), 0])
        .range([margins['top'], height - margins['bottom']])
    y_axis = d3.svg.axis()
        .scale(stream_y)
        .orient('left')
    chart_group.append('g')
        .attr('class', 'axis')
        .attr('transform', "translate(#{margins['left'] - 5}, 0)")
        .call(y_axis)
    chart_group.append('text')
        .attr("transform", "rotate(-90)")
        .attr('y', -margins['left'])
        .attr('x', height/2 + 50)
        .attr('dy', '1em')
        .attr('class', 'stream_y_label')
        .text("Gigawatt-Hours")

    area = d3.svg.area()
        .interpolate('cardinal')
        .x( (d) -> stream_x(_max - d.x) )
        .y0( (d) -> stream_y(d.y0) )
        .y1( (d) -> stream_y(d.y0 + d.y) )

    chart_group.selectAll('.layer')
        .data(layers)
        .enter().append('path')
            .attr('class', 'layer')
            .attr('d', (d) -> area(d.values) )
            .attr('id', (d) -> "#{d.type}_layer" )
            .style('fill', (d) -> chart_colors[d.type] )

    chart_group.selectAll('.layer')
        .attr('opacity', 1)
        .on('mouseover', (d, i) ->
            d3.selectAll('#veil').transition().duration(200)
                .attr('opacity', .9)
            chart_group.selectAll('.layer').transition().duration(200)
                .attr('opacity', (d, j) ->
                    .3 if j != i
                )
        )
        .on('mouseleave', () ->
            d3.selectAll('#veil').transition().duration(200)
                .attr('opacity', .75)
            chart_group.selectAll('.layer').transition().duration(200)
                .attr('opacity', 1)
        )


stream_data = () ->
    time_series = gon.elec_data[to_compare[0]]
    layers = []
    for type, series of time_series
        unless typeof series == typeof ""
            layers[layers.length] = {
                "type": "#{type}",
                "name": "#{translations[type]}"
                "values": make_hash_series(series)
            }
    layers    

make_hash_series = (series) ->
    hashed = []
    for i in [0...series.length]
        hashed[hashed.length] = {
            "x": i,
            "y": parseFloat(series[i][1])
        }
