fill_color = (state) ->
    # if over_time
    #     gradient = (_scores[state][_index1] - _scores[state][_index2]) / _scores[state][_index1]
    #     # console.log(state)
    #     # console.log(gradient)
    #     if gradient > 0
    #         color = green_scale(gradient)
    #     else
    #         color = red_scale(-gradient)
